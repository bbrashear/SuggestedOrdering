@model Product

<h2>Create a New Product</h2>

@using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
{
    <input asp-for="ProductID" type="hidden" value="" />
    <label asp-for="ItemNumber" class="control-label">Item Number</label>
    <input type="number" step="1.00" name="ItemNumber" class="form-control" />
    <label asp-for="Description" class="control-label">Description</label>
    <input type="text" name="Description" class="form-control" value="" />
    <label asp-for="CaseSize" class="control-label">Case Size</label>
    <input type="text" name="CaseSize" class="form-control" value="" />
    <label asp-for="UsageNumber" class="control-label">Usage Number</label>
    <input type="number" step="0.01" name="UsageNumber" class="form-control" />
    <label asp-for="OnHand" class="control-label">On Hand</label>
    <input type="number" step="0.01" name="OnHand" class="form-control" />
    <input type="submit" value="Create Product" class="btn btn-primary"/>
}

