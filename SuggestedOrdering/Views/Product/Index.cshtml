@model IEnumerable<Product>

    <h2>Products</h2>

    <div>
        @using (Html.BeginForm("InsertProduct", "Product", "Post"))
        {
            <input type="submit" value="Create a Product" class="btn btn-primary"/>
        }
    </div>

    <table class="table">
        <tr>
            <th>ID</th>
            <th>Item Number</th>
            <th>Description</th>
            <th>Case Size</th>
            <th>Usage Number</th>
            <th>On Hand</th>
        </tr>

        @foreach(var product in Model)
    {
        <tr>
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
            <td>@product.ItemNumber</td>
            <td>@product.Description</td>
            <td>@product.CaseSize</td>
            <td>@product.UsageNumber</td>
            <td>@product.OnHand</td>
        </tr>
    }
    </table>


